{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Interessado list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Fone</th>
                <th>Email</th>
                <th>Linguas</th>
                <th>Fonte</th>
                <th>Estudo</th>
                <th>Inicio</th>
                <th>Horario</th>
                <th>Chamada</th>
                <th>Status</th>
                <th>Observacao</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('interessado_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nome }}</td>
                <td>{{ entity.fone }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.linguas }}</td>
                <td>{{ entity.fonte }}</td>
                <td>{{ entity.estudo }}</td>
                <td>{% if entity.inicio %}{{ entity.inicio|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.horario }}</td>
                <td>{% if entity.chamada %}{{ entity.chamada|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.observacao }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('interessado_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('interessado_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('interessado_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
