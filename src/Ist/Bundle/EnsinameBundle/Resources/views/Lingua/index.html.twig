{% extends 'IstEnsinameBundle:Default:dashboard.html.twig' %}

{% block content %}
<p>
    <a href="{{ path('lingua_new') }}" class="btn btn-primary">Добавить язык</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Язык</th>
            <th>Примечания</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td>{{ entity.titulo }}</td>
            <td>{{ entity.observacao }}</td>
            <th>&nbsp;</th>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}